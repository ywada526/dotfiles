syntax on
filetype plugin indent on

set langmenu=C
language messages C
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set backspace=2
set number
set hlsearch
set wildmenu
set wildmode=list:longest,full
set clipboard=unnamed,unnamedplus
set scroll=3

vnoremap v <C-v>
nnoremap H 10h
nnoremap J 5j
nnoremap K 5k
nnoremap L 10l
nnoremap U <C-r>
nnoremap <ESC><ESC> :nohlsearch<CR>
inoremap jk <esc>
inoremap kj <esc>
